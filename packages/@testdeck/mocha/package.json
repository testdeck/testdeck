{
  "name": "@testdeck/mocha",
  "version": "0.0.3",
  "description": "TypeScript decorators based wrapper over mocha's interface",
  "author": "Panayot Cankov",
  "contributors": [
    {
      "name": "silkentrance",
      "url": "https://github.com/silkentrance"
    }
  ],
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/testdeck"
  },
  "bin": {
    "testdeck-watch": "./bin/watch"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "tsc",
    "pretest": "tsc",
    "test": "nyc mocha dist/test.js && tslint --project .",
    "tslint": "tslint --project .",
    "tslint-fix": "tslint --project . --fix"
  },
  "dependencies": {
    "@testdeck/core": "^0.0.3"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "dist/index.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/mocha": "^5.2.6"
  },
  "files": [
    "dist/*",
    "bin/watch"
  ],
  "publishConfig": {
    "access": "public"
  }
}
